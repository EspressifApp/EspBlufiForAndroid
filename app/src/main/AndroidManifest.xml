<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.espressif.espblufi">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BlufiConnectActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BlufiNegSecActivity"
            android:label="@string/neg_sec_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BlufiConfigureActivity"
            android:label="@string/configure_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BlufiDeauthenticateActivity"
            android:label="@string/deauthenticate_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BlufiSettingsActivity"
            android:label="@string/settings_title"
            android:screenOrientation="portrait" />
    </application>

</manifest>